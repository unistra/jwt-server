{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "id": "https://jwtserver.unistra.fr/schema/authorized_service.schema.json",
  "title": "JSON configuration for a service",
  "$defs": {
    "token_lifetime": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "duration": {
          "type": "integer",
          "minimum": 0
        },
        "unit": {
          "enum": [
            "seconds",
            "minutes",
            "hours",
            "days"
          ]
        }
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "service": {
      "type": "string"
    },
    "issuer": {
      "type": "string"
    },
    "fields": {
      "type": "object"
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "access_token_lifetime": {
          "$ref": "#/$defs/token_lifetime"
        },
        "refresh_token_lifetime": {
          "$ref": "#/$defs/token_lifetime"
        }
      }
    },
    "claims": {
      "type": "object"
    },
    "conditions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ldap_filters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ldap_must_exist": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "service"
  ]
}
